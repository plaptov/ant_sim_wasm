{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "wasm-pack",
			"args": ["build"],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "wasm-pack build"
		},
		{
			"type": "shell",
			"command": "wasm-pack",
			"args": ["test", "--firefox", "--headless"],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "wasm-pack test"
		}
	]
}